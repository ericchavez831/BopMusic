<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Admin Activities View</title>
    <link href="/css/styles.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>
  <body>

    <nav>
      <div class="logo-containter"><span id="logo">Activity.</span></div>
      <ul>
        <li><a class="txt-link" href="/admin">Home</a></li>
        <li><a class="txt-link" href="/users">Users</a></li>
        <li id="menu-item"><a class="txt-link" href="/activities">Activities</a></li>
        <li><a class="txt-link" href="/admin/logout">Logout</a></li>
      </ul>
    </nav>

    <div id="hideTable">
      <div class="table-box">
        <table class="content-table">
          <thead>
            <tr>
              <th>Update</th>
              <th>Delete</th>
              <th>Activity Name</th>
              <th>Type</th>
              <th>City</th>
              <th>State</th>
              <th>Date</th>
              <th>Time</th>
              <th>Description</th>
            </tr>
          </thead>
          
          <tbody>
              <% for(activity of activities) { %>
              <tr class="active-row">
                <td><span class="admin-action"><a class="txt-link" href="/activity/edit?activity_id=<%=activity.activity_id%>"> UPDATE </a></span></td>
                <td><span class="admin-action"><a href="#" class="deleteActivity txt-link" activityId="<%=activity.activity_id%>"> DELETE </a></span></td>
                <td><%=activity.activity_name%></td>
                <td><%=activity.type%></td>
                <td><%=activity.city%></td>
                <td><%=activity.state%></td>
                <td><%=activity.dateISO%></td>
                <td><%=activity.duration%> minutes</td>
                <td><%=activity.description%></td>
              </tr>
            <% } %>
          </tbody>
        
        </table>
      </div>
    </div>

    <script type="text/javascript" src="js/activityDelete.js"></script>
    
  </body>

  

</html>