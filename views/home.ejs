    <link href="/public/css/style.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>
  <body>
    
    <!-- Navigation Menu -->
    <nav>
      <h2>Navigate</h2>
      <ul>
        <li><a href="home.ejs">Home</a></li>
        <li><a href="create.ejs">Create</a></li>
        <li><a href="#">Explore</a></li>
        <li><a href="#">Profile</a></li>
      </ul>
    </nav>

    <!-- Title/Heading -->
    <h1>My Activities</h1>

    <!-- All playlists
      Create some for loop to load all playlists; 
    -->
    <figure id="loadList">
      <!-- Image
        holding a temp image for now
       -->
      <img src="https://www.tinypulse.com/hs-fs/hubfs/tiny-pulse-team-building-activities.jpg?width=1200&name=tiny-pulse-team-building-activities.jpg" width="100px" alt="Album picture">

      <!-- Playlist Name -->
      <figcaption>Some type of caption</figcaption>
    </figure>

    <div class="table-container">
      <button id="closeBtn">Close</button>
      <span id="table"></span>
    </div>
    

    <script>
      
      $("#closeBtn").hide();
      
      // show table
      $("#loadList").on("click", showSongs);
      function showSongs(){
        $("#table").show();
        $("#closeBtn").show();
        $("#table").html("hi");
      }

      // close table
      $("#closeBtn").on("click", function(){
        $("#table").hide();
        $("#closeBtn").hide();
      });
    </script>
  </body>
