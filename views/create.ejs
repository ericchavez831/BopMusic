<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="css/styles.css" rel="stylesheet" type="text/css" />
  <title>Create</title>
</head>
<body>
  
  <!-- Navigation Menu -->
  <nav>
    <h2 class="nav-mark1">Activity Planner</h2>
    <ul>
      <li><a class="txt-link" href="/home">Home</a></li>
      <li id="menu-item"><a class="txt-link" href="/create">Create</a></li>
      <li><a class="txt-link" href="/explore">Explore</a></li>
      <li><a class="txt-link" href="/profile">Profile</a></li>
    </ul>
  </nav>

  <!-- Title/Heading -->
  <h1>Plan your Activity!</h1>

  <form method="POST" action="/create">
    <input type="text" placeholder="Name of activity" name="activity_name"> <br>
    <input type="text" placeholder="City" name="city"> <br>
    <input type="text" placeholder="State" name="state"> <br>
    <input type="date" placeholder="mm/dd/yyyy" name="date"> <br>
    <input type="text" placeholder="Duration in minutes" name="duration"> <br>
    <textarea rows="5" cols="30" placeholder="Description" name="description"></textarea> <br>
    
    <select name="type">
      <option value="Social">Social</option>
      <option value="Cooking">Cooking</option>
      <option value="Relaxation">Relaxation</option>
    </select> <br>
    
    <button id="submitBtn">Submit</button> <br>
  </form>

  <% if(typeof message != 'undefined'){%>
      <%= message %>
  <% } %>

</body>
</html>